{
  "version": 2,
  "builds": [
    {
      "src": "Admin frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "ProdigyHub-Unified/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ProdigyHub-Unified/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/dist/images/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/dist/favicon.ico"
    },
    {
      "src": "/robots.txt",
      "dest": "/dist/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}
