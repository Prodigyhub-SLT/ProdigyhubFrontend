{
  "version": 2,
  "builds": [
    {
      "src": "Admin frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "ProdigyHub-Unified/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ProdigyHub-Unified/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Admin frontend/dist/index.html"
    }
  ]
}
