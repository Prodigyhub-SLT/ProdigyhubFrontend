{
  "version": 2,
  "builds": [
    {
      "src": "Admin frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "ProdigyHub-Unified/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/ProdigyHub-Unified/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/spa/index.html"
    }
  ]
}
